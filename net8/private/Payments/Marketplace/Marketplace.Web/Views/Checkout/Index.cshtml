@using ThirdParty.Model
@section Scripts
{
    <script src="https://js.stripe.com/v3/"></script>
}

@{
    ViewData["Title"] = "Checkout";
}

@*<p class="text-md-left"><b>@ViewData["Title"]</b></p>*@
<h4>@ViewData["Title"]</h4>

<div class="container" style="margin:20px 0px 20px; padding:0px">
    @foreach (var item in ViewBag.Customer.PaymentInstruments)
    {
        Card card = item.Details.ToObject<Card>();

        if (@item.Type == PIType.Card)
        {
            <div class="form-check" style="margin:20px 0px; padding:0px">
                <input class="form-check-input" type="radio" name="piList" id="@item.Id" style="margin:18px 0px 0px 30px"/>

                <label class="form-check-label w-100" for="@item.Id">
                    <div class="rounded border bg-light shadow" style="height:50px; margin:0px 0px 0px 0px">
                            <img src="@item.DisplayImage" class="rounded float" style="height: 30px; margin:0px 0px 0px 60px" />
                            <span style="display:inline-block; width: 80px; margin:10px 0px 0px 20px">@item.DisplayName</span>
                            Exp: @card.ExpMonth.ToString("00")/@card.ExpYear.ToString("0000").Substring(2, 2)
                    </div>
                </label>
            </div>
        }
    }

    <div class="form-check" style="margin:20px 0px; padding:0px">

        <label class="form-check-label w-100" for="addPi">
            <div class="rounded border bg-light shadow" style="height:50px; margin:0px 0px 0px 0px">
                    <img src="/images/iconPlus.png" class="rounded float" style="height: 30px; margin:0px 0px 0px 20px" />
                    <span class="text-primary" style="display:inline-block; margin:10px 0px 0px 10px">Add a new payment method</span>
            </div>
        </label>
    </div>

</div>

<button id="cancel" class="btn btn-secondary" style="width:140px; margin:0px 10px 0px 0px">
    Cancel
</button>

<button id="payButton" class="btn btn-primary" style="width:140px; margin:0px 10px 0px 0px"
    onclick="checkoutPagePayButtonOnClick('@ViewBag.Order.Id')">
    Pay Now
    <span id="paySpinner" class="spinner-border text-primary spinner-border-sm" role="status" aria-hidden="true" style="display:none"></span>
</button>

<script type="text/javascript">
    window.onload = function() {
        checkoutPageOnLoad();
    };
</script>